@model YemekSiparis.Application.Dtos.StoreDto
@{
    Layout = "_Layout.cshtml";
    int storeId = Model.Id; // Gerekirse Model.Store.Id yap!
    string activeTab = ViewBag.ActiveTab?.ToString() ?? "";
}

<div class="relative flex min-h-screen flex-col bg-white group/design-root overflow-x-hidden" style='font-family:"Plus Jakarta Sans","Noto Sans",sans-serif;'>
