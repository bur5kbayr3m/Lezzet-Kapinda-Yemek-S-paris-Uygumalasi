                            </a>
                            <!-- Destek -->
                            <a href="/StorePanel/Support" class="flex items-center gap-3 px-3 py-2 hover:bg-[#f4f0f0]">
                                <div class="text-[#181111]">
                                    <!-- Icon ... -->
                                </div>
                                <p class="text-[#181111] text-sm font-medium leading-normal">Destek</p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="layout-content-container flex flex-col max-w-[960px] flex-1">
                <!-- Sağ üstte Ürün Ekle butonu -->
                <div class="flex flex-wrap justify-between items-center gap-3 p-4">
                    <p class="text-[#181111] tracking-light text-[32px] font-bold leading-tight min-w-72">Menü</p>
                    <a href="/StorePanel/AddProduct"
                       class="flex items-center gap-2 bg-[#e51919] text-white px-6 py-2 rounded-xl font-bold hover:bg-[#ba1414] transition">
                        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="none" viewBox="0 0 24 24"><path fill="currentColor" d="M13 11h6a1 1 0 1 1 0 2h-6v6a1 1 0 1 1-2 0v-6H5a1 1 0 1 1 0-2h6V5a1 1 0 1 1 2 0v6Z" /></svg>
                        Ürün Ekle
                    </a>
                </div>
                <!-- Burada Menü ürünleri listesi veya başka içerik olacak -->
                <div class="px-4 py-3">
                    <!-- Ürünler burada listelenir -->
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function updateAuthUI() {
        const token = localStorage.getItem("token");
        const btnLogin = document.getElementById("btn-login");
        const btnRegister = document.getElementById("btn-register");
        const userIcon = document.getElementById("user-icon");
        if (token && token !== "" && token !== "undefined" && token !== "null") {
            btnLogin?.classList.add("hidden");
            btnRegister?.classList.add("hidden");
            userIcon?.classList.remove("hidden");
        } else {
            btnLogin?.classList.remove("hidden");
            btnRegister?.classList.remove("hidden");
            userIcon?.classList.add("hidden");
        }
    }
    document.addEventListener("DOMContentLoaded", updateAuthUI);
</script>
