@{
    Layout = "_Layout";
    ViewData["Title"] = "Admin Giriş";
}

<div class="min-h-screen bg-gray-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h2 class="mt-6 text-center text-3xl font-bold text-[#181111]">
                Admin Paneli Giriş
            </h2>
            <p class="mt-2 text-center text-sm text-[#886363]">
                Yönetici hesabınızla giriş yapın
            </p>
        </div>
        
        <!-- Hata Mesajı -->
        <div id="adminLoginErrorMsg" class="hidden text-center text-red-600 mb-4 text-sm font-semibold p-3 bg-red-50 rounded-xl border border-red-200"></div>
        
        <!-- Başarı Mesajı -->
        <div id="adminLoginSuccessMsg" class="hidden text-center text-green-600 mb-4 text-sm font-semibold p-3 bg-green-50 rounded-xl border border-green-200"></div>
        
        <form class="mt-8 space-y-6" onsubmit="handleAdminLogin(event)">
            <div class="bg-white rounded-xl shadow-lg p-8 space-y-6">
                <div>
                    <label for="adminEmail" class="sr-only">E-posta</label>
                    <input id="adminEmail" 
                           type="email" 
                           autocomplete="email" 
                           required 
                           class="form-input w-full rounded-xl bg-[#f4f0f0] h-12 px-4 placeholder:text-[#886363] text-base focus:outline-none focus:ring-2 focus:ring-[#ea4747] focus:border-transparent" 
                           placeholder="E-posta adresiniz" />
                </div>
                
                <div>
                    <label for="adminPassword" class="sr-only">Şifre</label>
                    <input id="adminPassword" 
                           type="password" 
                           autocomplete="current-password" 
                           required 
                           class="form-input w-full rounded-xl bg-[#f4f0f0] h-12 px-4 placeholder:text-[#886363] text-base focus:outline-none focus:ring-2 focus:ring-[#ea4747] focus:border-transparent" 
                           placeholder="Şifreniz" />
                </div>
                
                <div class="flex items-center">
                    <input id="adminRememberMe" 
                           name="remember-me" 
                           type="checkbox" 
                           class="h-4 w-4 text-[#ea4747] focus:ring-[#ea4747] border-gray-300 rounded">
                    <label for="adminRememberMe" class="ml-2 block text-sm text-[#886363]">
                        Beni hatırla
                    </label>
                </div>
                
                <div>
                    <button type="submit" 
                            class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-base font-bold rounded-full text-white bg-[#ea4747] hover:bg-[#d63939] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#ea4747] transition-colors duration-200">
                        <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                            <svg class="h-5 w-5 text-white group-hover:text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                            </svg>
                        </span>
                        Giriş Yap
                    </button>
                </div>
            </div>
        </form>
        
        <div class="text-center">
            <a href="/" class="text-sm text-[#886363] hover:text-[#ea4747] underline transition-colors duration-200">
                Ana sayfaya dön
            </a>
        </div>
    </div>
</div>

<script>
    function showAdminLoginError(msg) {
        const errorDiv = document.getElementById("adminLoginErrorMsg");
        const successDiv = document.getElementById("adminLoginSuccessMsg");
        
        successDiv.classList.add("hidden");
        errorDiv.textContent = msg;
        errorDiv.classList.remove("hidden");
        
        // Auto-hide after 5 seconds
        setTimeout(() => {
            errorDiv.classList.add("hidden");
        }, 5000);
    }
    
    function showAdminLoginSuccess(msg) {
        const errorDiv = document.getElementById("adminLoginErrorMsg");
        const successDiv = document.getElementById("adminLoginSuccessMsg");
        
        errorDiv.classList.add("hidden");
        successDiv.textContent = msg;
        successDiv.classList.remove("hidden");
    }
    
    function clearAdminLoginMessages() {
        document.getElementById("adminLoginErrorMsg").classList.add("hidden");
        document.getElementById("adminLoginSuccessMsg").classList.add("hidden");
    }

    async function handleAdminLogin(event) {
        event.preventDefault();
        clearAdminLoginMessages();
        
        const email = document.getElementById("adminEmail").value.trim();
        const password = document.getElementById("adminPassword").value;
        const rememberMe = document.getElementById("adminRememberMe").checked;

        if (!email || !password) {
            showAdminLoginError("Lütfen tüm alanları doldurun.");
            return;
        }

        // Show loading state
        const submitButton = event.target.querySelector('button[type="submit"]');
        const originalText = submitButton.textContent;
        submitButton.disabled = true;
        submitButton.innerHTML = `
            <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            Giriş yapılıyor...
        `;

        try {
            const response = await fetch("/api/admin/login", {
                method: "POST",
                headers: { 
                    "Content-Type": "application/json",
                    "Accept": "application/json"
                },
                body: JSON.stringify({ email, password })
            });

            if (!response.ok) {
                let errorMsg = "Giriş başarısız. E-posta ve şifrenizi kontrol edin.";
                try {
                    const data = await response.json();
                    if (data.errors) {
                        errorMsg = Object.values(data.errors).flat().join(" ");
                    } else if (data.title) {
                        errorMsg = data.title;
                    } else if (data.message) {
                        errorMsg = data.message;
                    }
                } catch (e) {
                    console.error("Error parsing response:", e);
                }
                showAdminLoginError(errorMsg);
                return;
            }

            const data = await response.json();
            if (data.token) {
                // Store token
                localStorage.setItem("adminToken", data.token);
                
                // Set cookie with appropriate options for admin
                const cookieOptions = rememberMe ? "; max-age=604800" : ""; // 7 days if remember me
                document.cookie = `adminToken=${data.token}; path=/${cookieOptions}; SameSite=Lax`;
                
                showAdminLoginSuccess("Giriş başarılı! Yönlendiriliyorsunuz...");
                
                // Redirect to admin panel after short delay
                setTimeout(() => {
                    // For now, redirect to home page since there's no admin panel yet
                    // In the future, this should redirect to admin dashboard
                    window.location.href = "/";
                }, 1500);
            } else {
                showAdminLoginError("Giriş başarısız. Sunucu yanıtı beklenmeyen formatta.");
            }
        } catch (error) {
            console.error("Admin login error:", error);
            showAdminLoginError("Sunucu hatası! Lütfen daha sonra tekrar deneyin.");
        } finally {
            // Restore button state
            submitButton.disabled = false;
            submitButton.textContent = originalText;
        }
    }
</script>