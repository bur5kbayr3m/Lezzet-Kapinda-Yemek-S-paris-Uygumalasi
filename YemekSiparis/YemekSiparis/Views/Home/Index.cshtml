@using YemekSiparis.Application.Dtos
@model YemekSiparis.Application.ViewModels.HomeViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LezzetKapında</title>
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin />
    <link rel="stylesheet" as="style" onload="this.rel='stylesheet'"
          href="https://fonts.googleapis.com/css2?display=swap&family=Noto+Sans:wght@400;500;700;900&family=Plus+Jakarta+Sans:wght@400;500;700;800" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
</head>
<body class="relative flex size-full min-h-screen flex-col bg-white overflow-x-hidden" style="font-family: 'Plus Jakarta Sans', 'Noto Sans', sans-serif;">
    <div class="layout-container flex h-full grow flex-col">
        @* Header *@
        @Html.Partial("_Header")

        <div class="px-40 flex flex-1 justify-center py-5">
            <div class="layout-content-container flex flex-col max-w-[960px] flex-1">
                <div class="container">
                    <div class="[480px]:p-4">
                        <div class="flex min-h-[480px] flex-col gap-6 bg-cover bg-center bg-no-repeat [480px]:gap-8 [480px]:rounded-xl items-start justify-end px-4 pb-10 [480px]:px-10"
                             style="background-image: linear-gradient(rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0.4) 100%), url('@Url.Content("~/images/hero-banner.jpg")');">
                            <div class="flex flex-col gap-2 text-left">
                                <h1 class="text-white text-4xl font-black leading-tight tracking-[-0.033em] [480px]:text-5xl">
                                    Kapınıza Gelen Lezzetler
                                </h1>
                                <h2 class="text-white text-sm font-normal leading-normal [480px]:text-base">
                                    En sevdiğiniz restoranlardan yemekleri hızlı ve kolay bir şekilde sipariş edin.
                                </h2>
                            </div>
                            <label class="flex flex-col min-w-40 h-14 w-full max-w-[480px] [480px]:h-16">
                                <div class="flex w-full flex-1 items-stretch rounded-xl h-full">
                                    <div class="text-[#886364] flex border border-[#e5dcdc] bg-white items-center justify-center pl-[15px] rounded-l-xl border-r-0">
                                        @* Arama ikonu *@
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" fill="currentColor" viewBox="0 0 256 256">
                                            <path d="M229.66,218.34l-50.07-50.06a88.11,88.11,0,1,0-11.31,11.31l50.06,50.07a8,8,0,0,0,11.32-11.32ZM40,112a72,72,0,1,1,72,72A72.08,72.08,0,0,1,40,112Z"></path>
                                        </svg>
                                    </div>
                                    <input placeholder="Adresinizi girin"
                                           class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-[#181111] focus:outline-0 focus:ring-0 border border-[#e5dcdc] bg-white h-full placeholder:text-[#886364] px-[15px] rounded-r-none border-r-0 pr-2 rounded-l-none border-l-0 pl-2 text-sm font-normal [480px]:text-base" />
                                    <div class="flex items-center justify-center rounded-r-xl border-l-0 border border-[#e5dcdc] bg-white pr-[7px]">
                                        <button class="flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-full h-10 px-4 [480px]:h-12 [480px]:px-5 bg-[#e92932] text-white text-sm font-bold tracking-[0.015em] [480px]:text-base">
                                            <span class="truncate">Yemek Bul</span>
                                        </button>
                                    </div>
                                </div>
                            </label>
                        </div>
                    </div>
                </div>

                @* Popüler Restoranlar *@
                <h2 class="text-[#181111] text-[22px] font-bold leading-tight tracking-[-0.015em] px-4 pb-3 pt-5">Popüler Restoranlar</h2>
                <div class="flex gap-4 px-4 pb-8 flex-wrap">
                    @foreach (var store in Model.PopularStores)
                    {
                        <a href="@Url.Action("Detail", "Store", new { id = store.Id })" style="text-decoration:none;">
                            <div class="rounded-lg overflow-hidden shadow-md w-44 bg-white hover:scale-105 transition cursor-pointer">
                                <img src="@(string.IsNullOrEmpty(store.ImageUrl)
                                               ? Url.Content("~/images/stores/placeholder.png")
                                               : Url.Content($"~/images/stores/{store.ImageUrl}"))"
                                     alt="@store.Name" class="w-full h-32 object-cover" />
                                <div class="p-2">
                                    <p class="text-center text-sm mt-1 font-medium">@store.Name</p>
                                </div>
                            </div>
                        </a>
                    }
                </div>

                @* En İyiler *@
                <h2 class="text-[#181111] text-[22px] font-bold leading-tight tracking-[-0.015em] px-4 pb-3 pt-5">En İyiler</h2>
                @Html.Partial("_TopMeals")

                @* Giriş / Kayıt Modalları *@
                @Html.Partial("_LoginModal")
                @Html.Partial("_RegisterModal")
            </div>
        </div>
    </div>

    @* Tüm Restoranlar Bölümü *@
    <div class="px-40 py-10">
        <h1 class="text-2xl font-bold mb-6">Restoranlar</h1>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var store in Model.AllStores)
            {
                <a href="/Store/Detail/@store.Id"
                   class="block rounded-xl overflow-hidden shadow hover:shadow-lg transition" style="text-decoration:none;">
                    <div class="h-48 bg-center bg-cover"
                         style="background-image:url('@(
                             string.IsNullOrEmpty(store.BannerImageUrl)
                               ? Url.Content("~/images/default-food.jpg")
                               : store.BannerImageUrl
                         )')">
                    </div>
                    <div class="p-4 bg-white">
                        <h2 class="text-lg font-bold">@store.Name</h2>
                        <p class="text-sm text-gray-600 line-clamp-3">@store.Description</p>
                    </div>
                </a>
            }
        </div>
    </div>
</body>
</html>
