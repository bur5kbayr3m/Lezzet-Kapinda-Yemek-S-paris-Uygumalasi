@model YemekSiparis.Application.Dtos.StoreDto

<div class="container mx-auto mt-8">
    <h1 class="text-3xl font-bold mb-4">@Model.Name</h1>
    <img src="/images/stores/@Model.ImageUrl" alt="@Model.Name" class="w-96 h-56 object-cover rounded-lg mb-4" />
    <div class="text-lg">@Model.Description</div>
    <div class="text-md text-gray-600 mt-2">@Model.Address</div>
    <div class="text-md text-gray-600 mt-2">Telefon: @Model.Phone</div>
</div>
