@model YemekSiparis.Application.ViewModels.StoreMenuViewModel
@{
    Layout = "_Layout";
}

<div class="flex flex-row gap-8 max-w-[1200px] mx-auto mt-8">
    <!-- SOL: Menü Listesi -->
    <div class="w-2/3">
        <!-- Sayfa yolu -->
        <div class="flex flex-wrap gap-2 p-4">
            <a class="text-[#886364] text-base font-medium leading-normal" href="#">Restoranlar</a>
            <span class="text-[#886364] text-base font-medium leading-normal">/</span>
            <span class="text-[#181111] text-base font-medium leading-normal">@Model.Store.Name</span>
        </div>

        <!-- Restoran bilgisi ve kapak görseli -->
        <div class="flex p-4">
            <div class="flex w-full flex-col gap-4 md:flex-row md:justify-between">
                <div class="flex gap-4">
                    <div class="bg-center bg-no-repeat aspect-square bg-cover rounded-xl min-h-32 w-32"
                         style='background-image: url("@Model.Store.ImageUrl");'>
                    </div>
                    <div class="flex flex-col">
                        <p class="text-[#181111] text-[22px] font-bold leading-tight tracking-[-0.015em]">@Model.Store.Name</p>
                        <p class="text-[#886364] text-base font-normal leading-normal">
                            4.5 (1200+ değerlendirme) · 30-45 dk · Min. Sipariş 20 TL
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Menü sekmeleri -->
        <div class="pb-3">
            <div class="flex border-b border-[#e5dcdc] px-4 gap-8">
                <a class="flex flex-col items-center justify-center border-b-[3px] border-b-[#181111] text-[#181111] pb-[13px] pt-4" href="#">
                    <p class="text-[#181111] text-sm font-bold leading-normal tracking-[0.015em]">Menü</p>
                </a>
                <a class="flex flex-col items-center justify-center border-b-[3px] border-b-transparent text-[#886364] pb-[13px] pt-4" href="#">
                    <p class="text-[#886364] text-sm font-bold leading-normal tracking-[0.015em]">Değerlendirmeler</p>
                </a>
                <a class="flex flex-col items-center justify-center border-b-[3px] border-b-transparent text-[#886364] pb-[13px] pt-4" href="#">
                    <p class="text-[#886364] text-sm font-bold leading-normal tracking-[0.015em]">Çalışma Saatleri</p>
                </a>
                <a class="flex flex-col items-center justify-center border-b-[3px] border-b-transparent text-[#886364] pb-[13px] pt-4" href="#">
                    <p class="text-[#886364] text-sm font-bold leading-normal tracking-[0.015em]">İletişim</p>
                </a>
            </div>
        </div>

        <!-- Kategoriler (opsiyonel, örnek olarak) -->
        <div class="flex gap-3 p-3 flex-wrap pr-4">
            <div class="flex h-8 shrink-0 items-center justify-center gap-x-2 rounded-full bg-[#f4f0f0] pl-4 pr-4">
                <p class="text-[#181111] text-sm font-medium leading-normal">Tümü</p>
            </div>
            @* Kategori döngüsü ekleyebilirsin *@
        </div>

        <!-- Menüdeki ürünler -->
        @foreach (var product in Model.Products)
        {
            <div class="flex items-center gap-4 bg-white px-4 min-h-[72px] py-2 mb-2 justify-between">
                <div class="flex items-center gap-4">
                    <div class="bg-center bg-no-repeat aspect-square bg-cover rounded-lg size-14"
                         style='background-image: url("@product.ImageUrl");'>
                    </div>
                    <div class="flex flex-col justify-center">
                        <p class="text-[#181111] text-base font-medium leading-normal line-clamp-1">@product.Name</p>
                        <p class="text-[#886364] text-sm font-normal leading-normal line-clamp-2">@product.Description</p>
                    </div>
                </div>
                <button class="flex items-center gap-2 rounded-full bg-[#f20c0c] text-white px-5 py-2 font-bold hover:bg-[#d30000] transition-all text-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-1.293 1.293a1 1 0 001.414 1.414L7 13zm0 0l1.293 1.293a1 1 0 01-1.414 1.414L7 13zm4 0v6m-2-2h4" />
                    </svg>
                    Sepete Ekle
                </button>
            </div>
        }
    </div>

    <!-- SAĞ: Sepet Paneli (statik) -->
    <div class="w-1/3 bg-[#f5f0f0] rounded-2xl shadow-lg p-6 h-fit min-w-[320px] sticky top-8">
        <h2 class="text-[#181111] text-2xl font-bold mb-4">Sepetim</h2>
        <div class="flex flex-col gap-4">
            <!-- Statik örnek ürün -->
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <div class="bg-center bg-no-repeat aspect-square bg-cover rounded-lg size-12"
                         style="background-image: url('https://images.unsplash.com/photo-1600891964599-f61ba0e24092?auto=format&fit=crop&w=100&q=80');"></div>
                    <div>
                        <div class="font-semibold text-[#181111]">Whopper Menü</div>
                        <div class="text-xs text-[#8a6060]">1 x 120 TL</div>
                    </div>
                </div>
                <div class="font-semibold text-[#181111]">120 TL</div>
            </div>
        </div>
        <div class="border-t border-[#ececec] mt-4 pt-4">
            <div class="flex justify-between text-base mb-2">
                <span>Toplam</span>
                <span>120 TL</span>
            </div>
            <div class="flex justify-between text-base mb-2">
                <span>Teslimat</span>
                <span>10 TL</span>
            </div>
            <div class="flex justify-between text-lg font-bold">
                <span>Genel Toplam</span>
                <span>130 TL</span>
            </div>
        </div>
        <div class="mt-4">
            <h3 class="text-sm font-bold mb-2">Ödeme Yöntemi</h3>
            <div class="flex flex-col gap-2">
                <label class="flex items-center gap-2">
                    <input type="radio" name="odeme" checked class="accent-[#181111]" /> Kredi Kartı
                </label>
                <label class="flex items-center gap-2">
                    <input type="radio" name="odeme" class="accent-[#181111]" /> Kapıda Nakit
                </label>
            </div>
        </div>
        <button class="w-full mt-4 h-12 rounded-full bg-[#f20c0c] text-white text-base font-bold hover:bg-[#d30000] transition">
            Siparişi Tamamla
        </button>
    </div>
</div>
